import random

print('Добро пожаловать в числовую угадайку!')
num_random = random.randint(1, 100)
num = 0

def is_valid(num):                                                                #Функция валидности ввода(Число от 1 до 100)
  flag_num = False
  while flag_num != True:
    num = input()
    if num.isdigit() == True:
      num = int(num)
    if num in range(1, 101):
      flag_num = True
      return num
      break
    else:
      print('А может быть все-таки введем целое число от 1 до 100?')

num = is_valid(num)

def is_right(num):                                                                #Функция проверки введеного числа на соответствие рандомному
  while num!= num_random:
    if num < num_random:
      print('Ваше число меньше загаданного, попробуйте еще разок')
      num = is_valid(num)
    elif num > num_random:
      print('Ваше число больше загаданного, попробуйте еще разок')
      num = is_valid(num)
  if num == num_random:
    print('Вы угадали, поздравляем!')
    print('Спасибо, что играли в числовую угадайку. Еще увидимся...')

is_right(num)
